<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SoccerJerseyPass</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SoccerJerseyPass.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Soccer_Jerseys" asp-action="Index">SoccerJerseyPass</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex  justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Soccer_Jerseys" asp-action="Index"><i class="badge-info bi-justify"></i>Soccer Jerseys</a>
                        </li>

                        <li class="nav-item dropend">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="bi bi-person-vcard"></i> Boards
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-controller="Leagues" asp-action="Index"><i class="bi bi-text-indent-left"></i> Leagues</a>
                                <a class="dropdown-item" asp-controller="Coaches" asp-action="Index"><i class="bi bi-people"></i> Coaches</a>
                                <a class="dropdown-item" asp-controller="Players" asp-action="Index"><i class="bi bi-people-fill"></i> Players</a>
                            </div>
                        </li>
                    </ul>

                    <form class="form-inline my-2 my-lg-0" asp-controller="Soccer_Jerseys" asp-action="Filter" style="padding-right:01px;">
                        <input name="searchString" type="text" class="form-control" placeholder="Search for a jersey...">                    
                    </form>
                    <form class="form-inline my-2 my-lg-3" asp-controller="Soccer_Jerseys" asp-action="Filter" style="padding-right:10px;">
                        <button class="btn btn-outline-success my-auto" type="submit"><i class="bi bi-search"></i></button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border text-muted">
        <div class="container">
            &copy; 2023 - SoccerJerseyPass 
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
