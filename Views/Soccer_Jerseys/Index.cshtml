@model IEnumerable<Soccer_Jersey>

@{
    ViewData["Title"] = "List of Soccer Jerseys";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 600px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-success">
                            <p class="card-text">
                                <h5 class="card-title">
                                   @item.Name
                                    <a class="text-white float-right" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                                    <a class="text-white float-right" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
                                </h5>
                            </p>
                        </div>
                    </div>

                    <div class="col-md-7">
                        <img src="@item.ImageURL" width="110%" alt="@item.Name">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">@item.Description</p>
                            <p class="card-text"><b>League: </b>@item.League.Name</p>
                            <p class="card-text"><b>Club: </b>@item.Club</p>
                            <p class="card-text"><b>Size: </b>@item.Size</p>
                            <p class="card-text"><b>Sleeve: </b>@item.Sleeve</p>
                            <p class="card-text ">
                                <b>Status: </b>
                                @if (2 >=1)
                                {
                                    <span class="badge bg-success text-white">AVAILABLE</span>
                                }
                               @* else if ()
                                {
                                    <span class="badge bg-danger text-white">EXPIRED</span>
                                }*@
                             @*   else
                                {
                                    <span class="badge bg-primary text-white">UPCOMING</span>
                                }*@
                            </p>

                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@item.Id">
                                 <i class="bi bi-eye-fill"></i> Show Details </a>
                                <a class="btn btn-warning text-white"><i class="bi bi-cart-plus"></i> Add to Cart (Price @item.Price.ToString("c"))</a>
                            </p>
                        </div>  
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@await Html.PartialAsync("_CreateItem", "Soccer_Jerseys") 